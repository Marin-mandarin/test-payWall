{
  "name": "tailwind-html-starter",
  "version": "0.0.2",
  "description": "A quick start plain HTML + Tailwind + Postcss project template.",
  "main": "index.js",
  "scripts": {
    "dev": "postcss ./src/style.css -o ./src/output.css  --watch --verbose",
    "build": "postcss ./src/style.css -o ./src/output.css --verbose",
    "prettier-format": "prettier src/**/*.html --write"
  },
  "keywords": ["tailwindcss starter", "tailwindcss", "tailwind", "starter", "tailwindcss-starter"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.7",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23"
  }
}
